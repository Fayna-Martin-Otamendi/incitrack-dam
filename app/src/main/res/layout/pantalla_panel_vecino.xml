<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnVerListado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver incidencias"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnMisIncidencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis incidencias"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerListado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnVerTablon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver tablÃ³n"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnMisIncidencias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCrearIncidencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear incidencia"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerTablon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>